.js-item-container
  = simple_form_for([namespace, page.resource], html: { class: "form js-item-form" }) do |f|
    .admin-common-panel
      .row.admin-common-panel__header
        .col-xs-12
          %h5= t("administrate.details")

      .row.admin-common-panel__content
        .col-md-12
          - if f.object.persisted?
            .col-md-12.form-group
              = f.input :id, readonly: true, input_html: {class: "form-control"}

          .col-md-12.form-group
            = f.input :school_id, required: false, input_html: {class: "form-control js-select2"},
              collection: School.all,
              placeholder: I18n.t("administrate.select_option",
                option: DelegationRequest.human_attribute_name(:school)),
              selected: f.object.school,
              include_blank: true,
              label_method: -> (reg) { reg.try(:name) }
          %br

          .col-md-12.form-group
            = f.input :ag_sti_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_cs_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_ecosoc_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_g20_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_cs_ecosoc_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_cs_g20_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_ecosoc_g20_count, required: false, input_html: {class: "form-control"}
          %br

          .col-md-12.form-group
            = f.input :ag_sti_cs_ecosoc_g20_count, required: false, input_html: {class: "form-control"}
          %br          

          .col-md-12.form-group
            = f.input :observer_count, required: false, input_html: {class: "form-control"}
          %br

        .col-xs-12
          .form-actions.mt20
            = button_tag(type: "submit", class:"btn btn-primary") do
              %span
                = submit_entity_label(f.object)
              %i.fa.fa-plus.ml5
            = link_to :back, class: "btn btn-default ml10" do
              %span
                = I18n.t("administrate.actions.back")
              %i.fa.fa-reply.ml5

