= render 'header', page: page

.row
  .col-xs-12
    .admin-common-panel
      .row.admin-common-panel__header
        .col-xs-12
          %h5
            = t("administrate.details")
      .row.admin-common-panel__content
        .col-xs-12
          = render 'basic_details_section', page: page, resource: page.resource

          .col-xs-12
            - if page.resource.location.present?
              = render 'admin/shared/show/location_section', page: page, title: School.human_attribute_name(:location), resource: page.resource.location 
            %br

        .col-xs-12
          .row.admin-detail-row
            .col-sm-3
              .span.bold
                = School.human_attribute_name(:inscription_image)
            .col-sm-9
              %a{href: page.resource.inscription_image.try(:url), about: "_blank"}
                .span
                  = image_tag page.resource.inscription_image.try(:smallthumb)

      .item-actions{style: "margin: 20px;"}
        = render 'item_actions', page: page
