= render 'header', page: page, show_buttons: true

.row
  .col-lg-3.col-md-6
    .panel.panel-primary
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-group.fa-5x
          .col-xs-9.text-right
            .huge 
              = @statistics.first[:partakers]
            %div Participantes
      %a{:href => admin_partakers_path}
        .panel-footer
          %span.pull-left Ver Detalles
          %span.pull-right
            %i.fa.fa-arrow-circle-right
          .clearfix

  .col-lg-3.col-md-6
    .panel.panel-green
      .panel-heading
        .row
          .col-xs-3
            %i.fa.fa-flag.fa-5x
          .col-xs-9.text-right
            .huge
              = @statistics.first[:delegations]
