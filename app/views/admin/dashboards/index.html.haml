      %a{:href => admin_delegates_path}
        .panel-footer
          %span.pull-left Ver Detalles
          %span.pull-right
            %i.fa.fa-arrow-circle-right
          .clearfix
  .col-lg-3.col-md-6
    .panel.panel-red
      .panel-heading
        .row
          .col-xs-3
            %i.fa.glyphicon.glyphicon-education.fa-5x
          .col-xs-9.text-right
            .huge 
              = @statistics.first[:authorities]
