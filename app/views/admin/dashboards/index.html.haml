        .panel-footer
          %span.pull-left Ver Detalles
          %span.pull-right
            %i.fa.fa-arrow-circle-right
          .clearfix




.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %i.fa.fa-bar-chart-o.fa-fw
        Estadisticas

      .row
        .col-lg-12
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped{style: "margin-bottom: 0px;"}
              %thead
                %tr
                  %th.text-center AÃ±o
                  %th.text-center Delegaciones
                  %th.text-center Participantes
                  %th.text-center Delegados
                  %th.text-center Autoridades
              %tbody
                - if @statistics.present? 
                  - @statistics.each do |stat| 
                    %tr
                      %td.text-center 
                        = stat[:year]
                      %td.text-center
                        = stat[:delegations]
                      %td.text-center
                        = stat[:partakers]
                      %td.text-center
                        = stat[:delegates]
                      %td.text-center
                        = stat[:authorities]