.container.col-md-4.col-md-offset-4
  .login-panel.panel.panel-default
    .panel-heading
      %h2.panel-title
        Iniciar Sesión
    .panel-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-inputs
          .form-group
            = f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", input_html: { class: "form-control" }
          .form-group
          = f.input :password, required: false, label: false, placeholder: "Contraseña", input_html: { class: "form-control" }
          .checkbox
            = f.input :remember_me, as: :boolean, label: "Recordarme" if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, "Entrar", class: "btn btn-lg btn-success btn-block"
