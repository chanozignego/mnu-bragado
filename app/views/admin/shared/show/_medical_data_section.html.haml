.admin-common-panel
  .row.admin-common-panel__header
    .col-xs-12
      .col-xs-11
        %h5
          = title
      .col-xs-1
        %button.pull-right{style: "margin-top: 5px;", data: {toggle: "collapse",  target: "#medical_data_section"}}
          .glyphicon.glyphicon-chevron-down
  .row.admin-common-panel__content.collapse.in{id: "medical_data_section"}  
    .col-xs-12
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:has_chronic_desease)
        .col-sm-9
          .span
            = resource.has_chronic_desease
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:chronic_desease_detail)
        .col-sm-9
          .span
            = resource.chronic_desease_detail
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:take_medication)
        .col-sm-9
          .span
            = resource.take_medication
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:medication_detail)
        .col-sm-9
          .span
            = resource.medication_detail
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:has_medical_background)
        .col-sm-9
          .span
            = resource.has_medical_background
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:medical_background_detail)
        .col-sm-9
          .span
            = resource.medical_background_detail
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:has_allergy)
        .col-sm-9
          .span
            = resource.has_allergy
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:allergy_detail)
        .col-sm-9
          .span
            = resource.allergy_detail
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:has_specific_diet)
        .col-sm-9
          .span
            = resource.has_specific_diet
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:specific_diet_detail)
        .col-sm-9
          .span
            = resource.specific_diet_detail
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:is_vegetarian)
        .col-sm-9
          .span
            = resource.is_vegetarian


    .col-sm-12
      .admin-common-panel
        .row.admin-common-panel__header
          .col-xs-12
            .col-xs-11
              %h5
                = MedicalDatum.human_attribute_name(:in_case_of_medical_emergency)
            .col-xs-1
              %button.pull-right{style: "margin-top: 5px;", data: {toggle: "collapse",  target: "#medical_emergency_section"}}
                .glyphicon.glyphicon-chevron-down
        .row.admin-common-panel__content.collapse.in{id: "medical_emergency_section"}  
          .col-xs-12
            .row.admin-detail-row
              .col-sm-6
                .span.bold
                  = MedicalDatum.human_attribute_name(:doctor_name)
              .col-sm-6
                .span
                  = resource.doctor_name
            .row.admin-detail-row
              .col-sm-6
                .span.bold
                  = MedicalDatum.human_attribute_name(:doctor_phone_number)
              .col-sm-6
                .span
                  = resource.doctor_phone_number
            .row.admin-detail-row
              .col-sm-6
                .span.bold
                  = MedicalDatum.human_attribute_name(:urgency_clinic)
              .col-sm-6
                .span
                  = resource.urgency_clinic