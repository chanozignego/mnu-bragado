.admin-common-panel
  .row.admin-common-panel__header
    .col-xs-12
      .col-xs-11
        %h5
          = title
      .col-xs-1
        %button.pull-right{style: "margin-top: 5px;", data: {toggle: "collapse",  target: "#medical_data_section"}}
          .glyphicon.glyphicon-chevron-down
  .row.admin-common-panel__content.collapse.in{id: "medical_data_section"}  
    .col-xs-12
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:has_chronic_desease)
        .col-sm-9
          - has_chronic_desease = resource.has_chronic_desease
          .span.label{class: "label-#{has_chronic_desease ? 'primary' : 'default'}"}
            = has_chronic_desease ? "Si" : "No"

      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:chronic_desease_detail)
        .col-sm-9
          .span
            = resource.chronic_desease_detail
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:take_medication)
        .col-sm-9
          - take_medication = resource.take_medication
          .span.label{class: "label-#{take_medication ? 'primary' : 'default'}"}
            = take_medication ? "Si" : "No"
      .row.admin-detail-row
        .col-sm-3
          .span.bold
            = MedicalDatum.human_attribute_name(:medication_detail)
        .col-sm-9
