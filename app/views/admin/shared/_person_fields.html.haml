.form-group.col-xs-6
  = f.input :first_name, required: false, input_html: {class: "form-control"}
.form-group.col-xs-6
  = f.input :last_name, required: false, input_html: {class: "form-control"}
.form-group.col-xs-4
  = f.input :dni, required: false, input_html: {class: "form-control"}
.form-group.col-xs-4
  = f.input :birthdate, required: false, as: :string, input_html: {class: "form-control js-date-field", id: "birthdatepicker"}
.form-group.col-xs-4
  = f.input :age, required: false, input_html: {class: "form-control"}
.form-group.col-xs-6
  = f.input :phone_number, required: false, input_html: {class: "form-control"}
.form-group.col-xs-6
  = f.input :email, required: false, input_html: {class: "form-control"}
.form-group.col-xs-6
  = f.input :blood_type, required: false, input_html: {class: "form-control js-select2"}, 
      include_blank: true, 
      collection: Person::BLOOD_TYPES,
      placeholder: I18n.t("administrate.select_option",
        option: Person.human_attribute_name(:blood_type)),
      selected: f.object.blood_type
.form-group.col-xs-6
  = f.input :rh_factor, required: false, input_html: {class: "form-control js-select2"}, 
      include_blank: true, 
      collection: Person::RH_BLOOD_FACTORS,
      placeholder: I18n.t("administrate.select_option",
        option: Person.human_attribute_name(:rh_factor)),
      selected: f.object.rh_factor

.col-xs-12
  .admin-common-panel
    .row.admin-common-panel__header
      .col-xs-12
        %h5
          = Person.human_attribute_name(:medical_insurance)
    .row.admin-common-panel__content
      .col-xs-4
        .form-group
          = f.input :medical_insurance, required: false, input_html: {class: "form-control"}
      .col-xs-4
        .form-group
          = f.input :medical_insurance_affiliate_number, required: false, input_html: {class: "form-control"}
      .col-xs-4
        .form-group
          = f.input :medical_insurance_phone_number, required: false, input_html: {class: "form-control"}

  %br

.col-xs-12
  .admin-common-panel
    .row.admin-common-panel__header
      .col-xs-12
        %h5
          = Person.human_attribute_name(:in_case_of_emergency)
    .row.admin-common-panel__content
      .col-xs-4
        .form-group
          = f.input :emergency_person, required: false, input_html: {class: "form-control"}
      .col-xs-4
        .form-group
          = f.input :emergency_person_phone_number, required: false, input_html: {class: "form-control"}
      .col-xs-4
        .form-group
          = f.input :emergency_person_relationship, required: false, input_html: {class: "form-control"}

  %br

= javascript_include_tag "admin/person/form"
