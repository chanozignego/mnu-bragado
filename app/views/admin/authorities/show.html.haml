= render 'header', page: page

.row
  .col-xs-12
    .admin-common-panel
      .row.admin-common-panel__header
        .col-xs-12
          %h5
            = t("administrate.details")
      .row.admin-common-panel__content
        .col-xs-12
          .row.admin-detail-row
            .col-sm-3
              .span.bold
                = Authority.human_attribute_name(:id)
            .col-sm-9
              .span
                = page.resource.id

          .row.admin-detail-row
            .col-sm-3
              .span.bold
                = Authority.human_attribute_name(:graduated)
            .col-sm-9
              - graduated = page.resource.graduated
              .span.label{class: "label-#{graduated ? 'primary' : 'default'}"}
                = graduated ? "Si" : "No"

          .row.admin-detail-row
            .col-sm-3
              .span.bold
                = Authority.human_attribute_name(:rol)
            .col-sm-9
              .span
                = page.resource.rol_translation

          = render 'admin/shared/show/person_section', page: page, title: "Personal data", resource: page.resource.person, show_title: false

          .row.admin-detail-row
            .col-sm-3
              .span.bold
                = Authority.human_attribute_name(:school_year)
            .col-sm-9
              .span
                = page.resource.school_year

          .row.admin-detail-row
            .col-sm-3
              .span.bold
                = Authority.human_attribute_name(:orientation)
            .col-sm-9
              .span
                = page.resource.orientation

          = render 'admin/shared/show/medical_data_section', page: page, title: "Medical data", resource: page.resource.medical_data

      .item-actions{style: "margin: 20px;"}
        = render 'item_actions', page: page