.col-xs-12
  .admin-common-panel
    .row.admin-common-panel__header
      .col-xs-12
        .col-xs-11
          %h5
            = title
    .row.admin-common-panel__content  
      .col-xs-12
        - if type == :sti
          - form_for = "#{field}_id".to_sym
          = f.input form_for,
            required: false,
            collection: collection,
            label: label,
            placeholder: I18n.t("administrate.select_option",
            option: label),
            value_method: :id,
            label_method: :full_name,
            selected: f.object.send(form_for), 
            include_blank: true,
            input_html: {class: 'js-select2 js-model-field full-width form-control'}

        - else 
          - form_for_1 = "#{field}1_id".to_sym
          = f.input form_for_1,
            required: false,
            collection: collection,
            label: label,
            placeholder: I18n.t("administrate.select_option",
            option: label),
            value_method: :id,
            label_method: :full_name,
            selected: f.object.send(form_for_1), 
            include_blank: true,
            input_html: {class: 'js-select2 js-model-field full-width form-control'}

          %br
          - form_for_2 = "#{field}2_id".to_sym
          = f.input form_for_2,
            required: false,
            collection: collection,
            label: label,
            placeholder: I18n.t("administrate.select_option",
            option: label),
            value_method: :id,
            label_method: :full_name,
            selected: f.object.send(form_for_2),
            include_blank: true,
            input_html: {class: 'js-select2 js-model-field full-width form-control'}


