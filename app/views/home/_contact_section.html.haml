                %input#email.form-control{"data-validation-required-message" => "Please enter your email address.", :placeholder => "Email *", :required => "", :type => "email"}/
                %p.help-block.text-danger
              .form-group
                %input#phone.form-control{"data-validation-required-message" => "Please enter your phone number.", :placeholder => "TelÃ©fono", :required => "", :type => "tel"}/
